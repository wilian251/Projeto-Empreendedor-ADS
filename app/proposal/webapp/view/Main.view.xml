<mvc:View 
    controllerName="finalproject.app.proposal.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
>
    <NavContainer id="idNavContainer">
        <pages>
            <Page id="idPage">
                <content>
                    <VBox fitContainer="true">
                        <smartFilterBar:SmartFilterBar 
                            id="idSmartFilterBar" 
                            entitySet="Orders" 
                            persistencyKey="SmartFilter_Explored"
                        >   
                            <smartFilterBar:controlConfiguration>
                                <smartFilterBar:ControlConfiguration
                                    index="0"
                                    key="orderNumber"
                                    visibleInAdvancedArea="true"
                                    preventInitialDataFetchInValueHelpDialog="false"
                                />
                                <smartFilterBar:ControlConfiguration
                                    index="1"
                                    key="orderStatusNumber"
                                    visibleInAdvancedArea="true"
                                    preventInitialDataFetchInValueHelpDialog="false"
                                />
                                <smartFilterBar:ControlConfiguration
                                    index="2"
                                    key="orderExpirationDate"
                                    visibleInAdvancedArea="true"
                                    preventInitialDataFetchInValueHelpDialog="false"
                                />
                            </smartFilterBar:controlConfiguration>
                            <smartFilterBar:layoutData>
                                <FlexItemData shrinkFactor="0"/>
                            </smartFilterBar:layoutData>
                        </smartFilterBar:SmartFilterBar>
                        <smartTable:SmartTable 
                            id="idSmartTable" 
                            entitySet="Orders" 
                            smartFilterId="idSmartFilterBar" 
                            tableType="ResponsiveTable"
                            header="{i18n>orders}"
                            persistencyKey="SmartTableAnalytical_Explored" 
                            enableAutoBinding="true"
                            class="sapUiResponsiveContentPadding"
                            enableAutoColumnWidth="true"
                            beforeRebindTable="onBeforeRebindTable"
                            initiallyVisibleFields="orderStatusNumber,orderNumber,orderDescription,orderExpirationDate,orderStatusNumber"
                        >
                            <Table>
                                <columns>
                                </columns>
                                <items>
                                    <ColumnListItem
                                        press="onPressOrder"
                                        type="Navigation"
                                    >
                                        <cells>
                                            
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                            <smartTable:layoutData>
                                <FlexItemData growFactor="1" baseSize="0%"/>
                            </smartTable:layoutData>
                        </smartTable:SmartTable>
                    </VBox>
                </content>
            </Page>
        </pages>
    </NavContainer>    
</mvc:View>